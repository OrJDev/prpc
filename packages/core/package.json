{
  "name": "@prpc/core",
  "description": "Package for easily creating server rpc functions in solid-start with goodies baked in",
  "version": "0.2.9",
  "scripts": {
    "build": "pnpm clean-some && tsup --config ./tsup.config.js && node scripts/postbuild",
    "clean": "rm -rf ./node_modules dist .turbo .solid utils.* types.* index.* chunk-*",
    "clean-some": "rm -rf utils.* types.* index.* chunk-*",
    "dev": "rm -rf dist && tsup --config ./tsup.config.js --watch",
    "lint": "eslint . --fix --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    },
    "./types": {
      "types": "./dist/types.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "index.*",
    "utils.*",
    "types.*",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^18.7.14",
    "@typescript-eslint/parser": "^5.44.0",
    "typescript": "^4.8.2",
    "zod": "^3.20.6"
  },
  "peerDependencies": {
    "zod": "^3.20.6"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16"
  }
}
