{
  "name": "prpc-mono",
  "description": "Workspace for prpc",
  "version": "0.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --include-dependencies --no-deps",
    "clean": "turbo run clean --parallel && rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "format": "prettier --write \"**.*.{ts,tsx,md}\"",
    "build:prpc": "turbo run build --scope=prpc",
    "dev:docs": "turbo run dev --scope=docs",
    "build:docs": "turbo run build --scope=docs",
    "start:docs": "turbo run start --scope=docs",
    "dev:basic": "turbo run dev --scope=basic",
    "build:basic": "turbo run build --scope=basic",
    "start:basic": "turbo run start --scope=basic",
    "ts:check": "torbo run ts:check --continue"
  },
  "type": "module",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "devDependencies": {
    "turbo": "1.2.4",
    "typescript": "^4.8.2"
  }
}
